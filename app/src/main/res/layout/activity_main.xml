<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

<LinearLayout android:id="@+id/LinearLayoutBrojevi"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center">

    <EditText android:id="@+id/editTextBroj1"
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:hint="BROJ 1"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <EditText android:id="@+id/editTextBroj2"
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:hint="BROJ 2"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"/>
    <TextView android:id="@+id/textViewRezultat"
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:text="Rez"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"/>

</LinearLayout>

    <LinearLayout android:id="@+id/linearLayoutUnos"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button android:id="@+id/buttonZbroj"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:text="+"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:onClick="clickButtonZbroj"
            android:layout_marginRight="15dp"/>

        <Button android:id="@+id/buttonOduzimanje"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:text="-"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:onClick="clickButtonOduzimanje"
            android:layout_marginRight="15dp"/>
        <Button android:id="@+id/buttonMnozenje"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:text="*"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:onClick="clickButtonMnozenje"
            android:layout_marginRight="15dp"/>
        <Button android:id="@+id/buttonDjeljenje"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:text="/"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:onClick="clickButtonDjeljenje"/>
    </LinearLayout>
</LinearLayout>